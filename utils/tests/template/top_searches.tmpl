template TopSearches(Person person, var searches) {
  <div>
    ${#with person}
      <div>
        <span>${name},&nbsp;</span>
        <span>age&nbsp;=&nbsp;</span>
        <span>${age}</span>
      </div>
      ${#each searches}
        <div>
          <span style="margin-left: 10px;">query=${query}</span>
          <span style="margin-left: 20px;">hits=${total}</span>
        </div>
      ${/each}
    ${/with}
  </div>
}

